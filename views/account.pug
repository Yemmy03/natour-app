extends  base



block content 
    main.main
        .user-view
            include _menu

            .user-view__content
                .user-view__form-container
                    h2.heading-secondary.ma-bt-md Your account settings
                    form.form.form-user-data(action='/submit-user-data',method='POST' ,enctype="multipart/form-data")
                        .form__group
                            label.form__label(for='name') Name
                            input#name.form__input(type='text', value=`${user.name}`, name="name",required)
                        .form__group.ma-bt-md
                            label.form__label(for='email') Email address
                            input#email.form__input(type='email', value=`${user.email}`,name="email", required)
                        .form__group.form__photo-upload
                            img.form__user-photo(src=`img/users/${user.photo}`, name="photo",alt='#{user.name}')
                            label(for="upload_profile") Choose File
                            input#upload_profile(type="file",accept='image/*' ,name="avatar",value="Choose new photo" ,hidden) 
                        .form__group.right
                            button.btn.btn--small.btn--green Save settings

                .line &nbsp;

                .user-view__form-container
                    h2.heading-secondary.ma-bt-md Password change
                    form.form.form-user-settings(action='/update-password',method='POST')
                        .form__group
                            label.form__label(for='password-current') Current password
                            input#password-current.form__input(type='password', placeholder='••••••••',name='oldPassword' ,autocomplete="current-password",required, minlength='8')
                        .form__group
                            label.form__label(for='password') New password
                            input#password.form__input(type='password', placeholder='••••••••',name='newPassword',autocomplete="new-password" ,required, minlength='8')
                        .form__group.ma-bt-lg
                            label.form__label(for='password-confirm') Confirm password
                            input#password-confirm.form__input(type='password', placeholder='••••••••', name='newPasswordConfirm',required,autocomplete="new-password", minlength='8')
                        .form__group.right
                            button.btn.btn--small.btn--green Save password
